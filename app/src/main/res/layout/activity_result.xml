<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.result.ResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        style="@style/Widget.MaterialComponents.AppBarLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edt_underline"
                    android:gravity="start"
                    android:hint="@string/fill_the_title"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="4dp"
                    android:textColor="@color/softBlue"
                    android:textColorHint="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/saveButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:contentDescription="@string/save"
                    android:foreground="@drawable/ripple_effect"
                    android:padding="12dp"
                    android:src="@drawable/ic_save"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_activity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:alpha="0"
            android:clickable="false"
            android:elevation="0dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:alpha="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/result_image"
                android:scaleType="centerCrop"
                android:src="@drawable/telur" />
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/retryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:alpha="0"
            android:includeFontPadding="false"
            android:textColor="?attr/colorOnBackground"
            android:textSize="20sp"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:alpha="1"
            tools:text="Tomato Rice" />

        <TextView
            android:id="@+id/ingredientsKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:alpha="0"
            android:includeFontPadding="false"
            android:text="@string/ingredients"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:alpha="1" />

        <TextView
            android:id="@+id/ingredientsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="2dp"
            android:alpha="0"
            android:includeFontPadding="false"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredientsKey"
            tools:alpha="1"
            tools:text="Tomato, Rice" />

        <TextView
            android:id="@+id/stepsKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:alpha="0"
            android:includeFontPadding="false"
            android:text="@string/steps"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredientsValue"
            tools:alpha="1" />

        <ListView
            android:id="@+id/stepsValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="2dp"
            android:alpha="0"
            android:clickable="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/retryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepsKey"
            tools:alpha="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previousButton"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="4dp"
            android:alpha="0"
            android:background="@drawable/bg_rounded_start"
            android:elevation="10dp"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="@string/back"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"
            app:fontFamily="@font/poppins_regular"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconSize="16dp"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/retryButton"
            app:layout_constraintEnd_toStartOf="@+id/retryButton"
            app:layout_constraintTop_toTopOf="@+id/retryButton"
            tools:alpha="1"
            tools:visibility="visible" />

        <!-- Vertical line between previousButton and retryButton -->
        <View
            android:id="@+id/verticalLineLeftOfRetry"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:background="@color/softGray"
            app:layout_constraintBottom_toBottomOf="@+id/retryButton"
            app:layout_constraintEnd_toStartOf="@+id/retryButton"
            app:layout_constraintStart_toEndOf="@+id/previousButton"
            app:layout_constraintTop_toTopOf="@+id/retryButton"
            tools:alpha="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:alpha="0"
            android:background="@drawable/bg_rectangle_center"
            android:elevation="10dp"
            android:includeFontPadding="false"
            android:text="@string/retry"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_medium"
            app:icon="@drawable/ic_retry"
            app:iconSize="16dp"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:alpha="1" />

        <!-- Vertical line between retryButton and nextButton -->
        <View
            android:id="@+id/verticalLineRightOfRetry"
            android:layout_width="2dp"
            android:layout_height="56dp"
            android:alpha="0"
            android:background="@color/softGray"
            app:layout_constraintBottom_toBottomOf="@+id/retryButton"
            app:layout_constraintEnd_toStartOf="@+id/nextButton"
            app:layout_constraintStart_toEndOf="@+id/retryButton"
            app:layout_constraintTop_toTopOf="@+id/retryButton"
            tools:alpha="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:alpha="0"
            android:background="@drawable/bg_rounded_end"
            android:elevation="10dp"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="@string/next"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"
            app:fontFamily="@font/poppins_regular"
            app:icon="@drawable/ic_arrow_next"
            app:iconGravity="textEnd"
            app:iconSize="16dp"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/retryButton"
            app:layout_constraintStart_toEndOf="@+id/retryButton"
            app:layout_constraintTop_toTopOf="@+id/retryButton"
            tools:alpha="1"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>